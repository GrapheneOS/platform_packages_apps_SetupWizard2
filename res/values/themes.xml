<resources xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SetupWizard" parent="SudThemeGlifV4.DayNight">
        <item name="sudUseBottomProgressBar">true</item>
    </style>

    <style name="SudContentIllustrationExtended" parent="SudContentIllustration">
        <item name="android:maxWidth">@dimen/sud_content_illustration_max_width</item>
        <item name="android:maxHeight">@dimen/sud_content_illustration_max_height</item>
        <item name="android:minWidth">@dimen/sud_content_illustration_min_width</item>
        <item name="android:minHeight">@dimen/sud_content_illustration_min_height</item>
        <item name="android:layout_marginBottom">50dp</item>
    </style>

    <style name="SudCheckBox.Multiline.Primary" parent="SudCheckBox.Multiline">
        <item name="android:buttonTint">?android:attr/textColorPrimary</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>
